@model List<FlipCardGame.DAL.Users>
@using RoyaMVC_EN.HTMLHelpers
@using RoyaMVC_EN.Models
@using FlipCardGame.Models
@{
    ViewBag.Title = "Home Page";
}

<div class="Title">Last registered users</div>

@section JS
{
<script>
    $(document).load(function () {
        alert('Running!');
        document.write("Cookies found: " + document.cookie);
        //alert(document.cookie);
        //["ASPXAUTH"]
    });
</script>
}

<div>
    @if (Model.Count == 0)
    {
        <text><label class="Title" style="text-align: center; width: 100%; padding: 25pt 0pt; display: block;">No user registered yet!</label></text>
    }
    else
    {
        foreach (var item in Model)
        {
            @Html.RoyaOptionItem("user" + item.IDUser.ToString(), 
                                 item.UserFullName, 
                                 new RouteModel("Profile", "Index", new { id = item.IDUser }), 
                                 new RouteModel("/Content/imgs/av.png", true))
        }
    }
</div>